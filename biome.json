{
	"files": {
		"maxSize": 16777216,
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 80,
		"indentStyle": "tab",
		"indentWidth": 4
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"rules": {
			"correctness": {
				"noConstantCondition": "off",
				"noEmptyCharacterClassInRegex": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"style": {
				"noParameterAssign": "off",
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noAssignInExpressions": "off",
				"noCatchAssign": "off",
				"noConfusingLabels": "off",
				"noExplicitAny": "off",
				"noThenProperty": "off"
			}
		}
	}
}